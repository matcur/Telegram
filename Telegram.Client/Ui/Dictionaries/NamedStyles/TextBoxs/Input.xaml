<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="InputStyle" TargetType="TextBox">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="0 10 0 0"/>
        <Setter Property="Padding" Value="12 0 0 3"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0 0 0 1"/>
        <Setter Property="BorderBrush" Value="#313C49"/>
        <Setter Property="FontSize" Value="21"/>
        <Setter Property="Foreground" Value="{StaticResource LightForeground}"/>
        <Setter Property="CaretBrush" Value="{StaticResource LightForeground}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#313C49"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#6396CB"/>
                <Setter Property="BorderThickness" Value="0 0 0 2"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>