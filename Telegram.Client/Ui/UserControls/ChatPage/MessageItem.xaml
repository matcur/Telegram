<UserControl x:Class="Telegram.Client.UserControls.ChatPage.MessageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Telegram.Client.UserControls.ChatPage"
             xmlns:userControls="clr-namespace:Telegram.Client.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="70" d:DesignWidth="200"
             MouseDoubleClick="OnDoubleClick">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Border 
                Grid.Column="2"
                Style="{StaticResource MessageItemStyle}">
                <StackPanel>
                    <TextBlock 
                        Text="{Binding Message.Author.FullName}"
                        Foreground="{Binding AuthorForeground}"/>
                    <userControls:ContentControl Value="{Binding Message.Content}"/>
                </StackPanel>
            </Border>
        </Grid>
</UserControl>
