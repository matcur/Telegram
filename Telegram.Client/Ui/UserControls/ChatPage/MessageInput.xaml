<UserControl x:Class="Telegram.Client.Ui.UserControls.ChatPage.MessageInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icons="clr-namespace:Telegram.Client.Ui.UserControls.Icons"
             xmlns:chatPage="clr-namespace:Telegram.Client.Ui.UserControls.ChatPage"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="300"
             KeyDown="Send" d:DataContext="{d:DesignInstance chatPage:MessageInput}">
    <Grid Background="{StaticResource MainIndexBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <TextBox
            Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource MessageInputStyle}"/>
        <icons:Smile
            Grid.Column="1"
            HorizontalContentAlignment="Center"/>
    </Grid>
</UserControl>
