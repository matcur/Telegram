<Page x:Class="Telegram.Client.Ui.Pages.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:chatPage="clr-namespace:Telegram.Client.Ui.UserControls.ChatPage"
      xmlns:viewModels="clr-namespace:Telegram.Client.Ui.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="350"
      Loaded="OnLoaded" d:DataContext="{d:DesignInstance viewModels:ChatViewModel}">
    <Grid Background="{StaticResource ChatBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <chatPage:Header/>
        <chatPage:Body
            x:Name="Body"
            Grid.Row="1"
            Messages="{Binding Chat.Messages}"
            VerticalContentAlignment="Stretch"/>
        <chatPage:MessageInput 
            x:Name="Input"
            Grid.Row="2"/>
    </Grid>
</Page>
