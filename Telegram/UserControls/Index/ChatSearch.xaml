<UserControl x:Class="Telegram.UserControls.Index.ChatSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Telegram.UserControls.Index"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid>
        <Border 
            CornerRadius="2"
            Background="{StaticResource ChatSearchBackground}">
            <TextBox 
                x:Name="input"
                Style="{StaticResource ChatSearchStyle}"
                Text="{Binding ChatSearch.Text}"
                TextChanged="OnTextChanged"/>
        </Border>
    </Grid>
</UserControl>
