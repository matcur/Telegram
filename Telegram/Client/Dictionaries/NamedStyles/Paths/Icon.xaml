<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="IconStyle" TargetType="Path">
        <Setter Property="Stroke" Value="{StaticResource IconStroke}"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="Margin" Value="10 0"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}, Path=IsMouseOver}" Value="True">
                <Setter Property="Stroke" Value="{StaticResource HoverIconStroke}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>