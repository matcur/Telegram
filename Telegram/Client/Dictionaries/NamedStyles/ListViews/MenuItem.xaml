<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MenuItemStyle" TargetType="ListViewItem" BasedOn="{StaticResource ClearListItemStyle}">
        <Setter Property="Height" Value="40"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource HoverChatBackground}"/>
            </Trigger>
        </Style.Triggers>
    </Style>    
</ResourceDictionary>