<UserControl x:Class="Telegram.Client.UserControls.Index.Burger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Telegram.Client.UserControls.Index"
             mc:Ignorable="d">
    <Grid>
        <Border 
            Padding="20"
            Background="Transparent"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <Canvas>
                <Line 
                    Canvas.Top="-5"
                    X1="-10" X2="10"
                    Y1="0" Y2="0"
                    Style="{StaticResource BurgerLineStyle}"/>
                <Line 
                    Canvas.Top="0"
                    X1="-10" X2="10"
                    Y1="0" Y2="0"
                    Style="{StaticResource BurgerLineStyle}"/>
                <Line 
                    Canvas.Top="5"
                    X1="-10" X2="10"
                    Y1="0" Y2="0"
                    Style="{StaticResource BurgerLineStyle}"/>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
