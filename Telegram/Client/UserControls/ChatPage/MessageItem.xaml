<UserControl x:Class="Telegram.Client.UserControls.ChatPage.MessageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Telegram.Client.UserControls.ChatPage"
             xmlns:userControls="clr-namespace:Telegram.Client.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             MouseDoubleClick="OnDoubleClick">
        <StackPanel>
            <Border Width="40"/>
            <Border 
                CornerRadius="3 3 3 0"
                Padding="20 5 10 0"
                Background="{StaticResource MessageBackground}">
                <StackPanel>
                    <TextBlock 
                        x:Name="authorName"
                        Padding="0 0 0 5"
                        Foreground="{StaticResource MessageAuthorForeground}"
                        FontSize="{StaticResource SmallFontSize}"
                        FontWeight="600"/>
                    <userControls:ContentControl x:Name="contentControl"/>
                </StackPanel>
            </Border>
        </StackPanel>
</UserControl>
