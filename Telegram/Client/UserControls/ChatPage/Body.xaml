<UserControl x:Class="Telegram.Client.UserControls.ChatPage.Body"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Telegram.Client.UserControls.ChatPage"
             xmlns:designData="clr-namespace:Telegram.Client.DesignData"
             xmlns:pages="clr-namespace:Telegram.Client.Pages"
             xmlns:userControls="clr-namespace:Telegram.Client.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400"
             Loaded="OnLoaded">
    <UserControl.Resources>
        <ObjectDataProvider 
            x:Key="designChat"
            ObjectType="{x:Type designData:DesignChat}"/>
    </UserControl.Resources>
    <Border MinWidth="200">
        <ListView
            d:DataContext="{StaticResource designChat}"
            x:Name="messageListView"
            Style="{StaticResource ClearListViewStyle}"
            ItemContainerStyle="{StaticResource MessageListItemStyle}"
            ScrollViewer.VerticalScrollBarVisibility="Visible">
        </ListView>
    </Border>
</UserControl>
