<UserControl x:Class="Telegram.Client.UserControls.Forms.NewGroupForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Telegram.Client.UserControls.Forms"
             xmlns:form="clr-namespace:Telegram.Client.UserControls.Form"
             mc:Ignorable="d">
    <Border 
        Style="{StaticResource FormStyle}"
        Width="300">
        <StackPanel>
            <form:TextInput
                x:Name="NameInput"
                Title="Name"/>
            <form:TextInput
                x:Name="DescriptionInput"
                Title="Description"/>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0 20 0 0">
                <Button 
                    Style="{StaticResource FormButtonStyle}"
                    Margin="0 0 20 0"
                    Content="CANSEL"/>
                <Button 
                    Style="{StaticResource FormButtonStyle}"
                    Content="CREATE"
                    Click="TryCreate"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
